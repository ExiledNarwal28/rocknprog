FROM jekyll/jekyll:latest as build-stage

ARG PORT

WORKDIR /tmp

COPY web/Gemfile* ./

RUN bundle install

RUN echo $PORT

WORKDIR /usr/src/app

COPY web/* .

RUN chown -R jekyll .

RUN jekyll build

FROM nginx:latest

COPY --from=build-stage /usr/src/app/_site/ /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

CMD sed -i -e 's/$PORT/'"$PORT"'/g' /etc/nginx/conf.d/default.conf && nginx -g 'daemon off;'
